
page {
		height: 100%;
		background-color: #F2F2F2;
}
.content {
		height: 100%;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
}
.up {
		height: 200rpx;
		padding: 40rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
		-webkit-box-align: end;
		-webkit-align-items: flex-end;
		        align-items: flex-end;
		background-color: #FFFFFF;
}
.job-name {
		font-size: 48rpx;
		font-weight: 500;
}
.money {
		text-align: end;
		font-size: 32rpx;
}
.hr {
		font-size: 32rpx;
}
.input {
		padding: 40rpx;
		height: 200rpx;
		width: 100%;
		background-color: #FFFFFF;
}
.scroll {
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
		overflow: scroll;
		padding: 20rpx;
}
.me{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.me>view {
		padding: 20rpx;
		margin-bottom: 20rpx;
		-webkit-border-radius: 10rpx;
		        border-radius: 10rpx;
		width: -webkit-fit-content;
		width: fit-content;
		max-width: 75%;
}
.chat-left{
		background-color: #FFFFFF
}
.chat-right{
		background-color: #4b95fe;
		color: #FFFFFF;
		margin-left: auto;
}
.center {
		height: 100%;
}

