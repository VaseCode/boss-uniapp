
page {
	height: 100%;
}
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 100%;
}
.left {
	-webkit-box-flex: 2;
	-webkit-flex: 2;
	        flex: 2;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	text-align: center;
	overflow: scroll;
}
.left-item {
	padding: 20rpx;
	margin: 20rpx;
}
.right {
	-webkit-box-flex: 8;
	-webkit-flex: 8;
	        flex: 8;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	overflow: scroll;
}
.right-scroll {
	background-color: #F7F7F7;
}
.part {
	background-color: #FFFFFF;
	margin: 20rpx;
	padding: 20rpx 60rpx;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
}
.part>text {
	font-size: 40rpx;
	font-weight: 400;
}
.part>view {
	margin: 20rpx 0;
}
.index-active {
	background-color: #70c2fb;
	color: #FFFFFF;
	font-size: 32rpx;
}

